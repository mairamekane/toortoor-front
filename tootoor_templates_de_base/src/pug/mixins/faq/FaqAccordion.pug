mixin FaqAccordionItem(config)
  .card.shadow-none.border-bottom
    .card-header.p-0(id=`title${config.id}`)
      button.btn.btn-light.btn-block.text-left.p-3.rounded-0.collapsed(type="button" data-toggle='collapse' data-target=`#collapse${config.id}` aria-expanded='false' aria-controls=`collapse${config.id}`)
        span.fas.fa-caret-right.accordion-icon.mr-3(data-fa-transform="shrink-2")
        span.font-weight-medium.font-sans-serif.text-900=config.title
      .collapse(id=`collapse${config.id}` aria-labelledby=`title${config.id}` data-parent='#accordionFaq')
        .card-body.pt-2
          .pl-4=config.description

mixin FaqAccordion
  .card
    .card-body
      #accordionFaq.accordion.border-x.border-top.rounded
        each faq in faqs
          +FaqAccordionItem(faq)